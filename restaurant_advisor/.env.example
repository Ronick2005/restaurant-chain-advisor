# Restaurant Chain Advisor - Environment Variables

# Location API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
HERE_MAPS_API_KEY=your_here_maps_api_key
TOMTOM_API_KEY=your_tomtom_api_key
GEOAPIFY_API_KEY=your_geoapify_api_key

# Default map service to use (google_maps, here_maps, geoapify)
DEFAULT_MAP_SERVICE=google_maps

# Application settings
DEBUG=True
LOG_LEVEL=INFO
APP_PORT=5000

# Database settings
DB_HOST=localhost
DB_PORT=27017
DB_NAME=restaurant_advisor
MONGODB_URI=mongodb://localhost:27017/restaurant_advisor

# OpenAI API settings
OPENAI_API_KEY=your_openai_api_key
DEFAULT_MODEL=gpt-4

# Agent system settings
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT=60  # seconds

# Data source settings
DATA_DIR=data
CACHE_DIR=cache
CACHE_EXPIRY=86400  # seconds (24 hours)

# Web scraping settings
SCRAPE_DELAY=1.0  # seconds
USER_AGENT=Restaurant Advisor Bot/1.0
MAX_RETRIES=3

# External API rate limits (requests per minute)
GOOGLE_MAPS_RATE_LIMIT=60
HERE_MAPS_RATE_LIMIT=60
GEOAPIFY_RATE_LIMIT=30

# Feature flags
ENABLE_CACHING=True
ENABLE_LOGGING=True
ENABLE_ANALYTICS=False

# Geospatial settings
DEFAULT_SEARCH_RADIUS=5000  # meters
MAX_SEARCH_RADIUS=50000  # meters
DEFAULT_LOCATION=Mumbai, India
